<includes>
<!---PORTRAIT------>
	<include name="view_SlidePoster">
		<control type="fixedlist" id="52">
			<viewtype label="Slide">info</viewtype>
			<posx>-2</posx>
			<posy>90</posy>
			<width>1450</width>
			<height>425</height>
			<onup>6000</onup>
			<ondown>72</ondown>
			<onleft>52</onleft>
			<onright>52</onright>
			<focusposition>1</focusposition>
			<pagecontrol>72</pagecontrol>
			<scrolltime tween="Cubic" easing="Out">400</scrolltime>
			<orientation>horizontal</orientation>
			<include>transition_Container</include>
			<include>infoDialogHide</include>
			<include>toggle_Menu</include>
			<visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)]</visible>
			<include condition="Window.IsVisible(videolibrary)">SlidePoster_Video</include>
		</control>
	</include>
	<include name="SlidePoster_Video">
		<itemlayout height="400" width="205">
			<control type="group">
				<control type="image">
					<width>228</width>
					<height>316</height>
					<texture background="true">$VAR[thumb_Portrait.Condition]</texture>
					<bordertexture border="40">frames/frame_Square.png</bordertexture>
					<aspectratio align="center">stretch</aspectratio>
					<bordersize>22</bordersize>
				</control>
				<control type="group">
					<posx>174</posx>
					<posy>262</posy>
					<control type="image">
						<include>overlay_UnWatched</include>
					</control>
					<control type="image">
						<include>overlay_Resumable</include>
					</control>
				</control>
			</control>
		</itemlayout>
		<focusedlayout height="400" width="205">
			<control type="group">
				<include>focus_SlidePoster</include>
				<control type="image">
					<width>228</width>
					<height>316</height>
					<texture background="true">$VAR[thumb_Portrait.Condition]</texture>
					<bordertexture border="40">frames/frame_Square.png</bordertexture>
					<aspectratio align="center">stretch</aspectratio>
					<bordersize>22</bordersize>
				</control>
				<control type="group">
					<posx>174</posx>
					<posy>262</posy>
					<control type="image">
						<include>overlay_UnWatched</include>
					</control>
					<control type="image">
						<include>overlay_Resumable</include>
					</control>
				</control>
			</control>
		</focusedlayout>
	</include>

<!---LANDSCAPE------>
	<include name="view_SlideLandscape">
		<control type="fixedlist" id="521">
			<viewtype label="WideSlide">biginfo</viewtype>
			<posx>-610</posx>
			<posy>130</posy>
			<width>2200</width>
			<height>430</height>
			<onleft>521</onleft>
			<onright>521</onright>
			<onup>6000</onup>
			<ondown>72</ondown>
			<focusposition>2</focusposition>
			<pagecontrol>72</pagecontrol>
			<scrolltime tween="Cubic" easing="Out">400</scrolltime>
			<preloaditems>2</preloaditems>
			<orientation>horizontal</orientation>
			<include>transition_Container</include>
			<include>infoDialogHide</include>
			<include>toggle_Menu</include>
			<visible>[Container.Content(tvshows) | Container.Content(episodes) | Container.Content(musicvideos) | Container.Content(artists)] | [Container.Content(movies) + !SubString(Container.FolderPath,plugin://) + Container.HasFiles] | [Container.Content(files) + Container.HasFiles]</visible>
			<include condition="Window.IsVisible(videolibrary)">SlideWideVideo</include>
			<include condition="Window.IsVisible(musiclibrary)">SlideWideMusic</include>
		</control>	
	</include>
	<include name="SlideWideVideo">
		<itemlayout width="425" height="300">
			<control type="group">
				<control type="image">
					<width>450</width>
					<height>272</height>
					<texture background="true">$VAR[thumb_Landscape.Condition]</texture>
					<aspectratio align="center">scale</aspectratio>
					<bordertexture border="31">frames/frame_Square.png</bordertexture>
					<bordersize>22</bordersize>
				</control>
				<control type="image">
					<posx>32</posx>
					<posy>176</posy>
					<width>156</width>
					<height>64</height>
					<texture background="true">$INFO[ListItem.Path]logo.png</texture>
					<aspectratio align="center">keep</aspectratio>
					<visible>Skin.HasSetting(tvshowlogos.enable) + [stringcompare(Container.FolderPath,videodb://5/) | SubString(Container.FolderPath,special://)]</visible>
				</control>
				<control type="group">
					<posx>396</posx>
					<posy>218</posy>
					<control type="image">
						<include>overlay_UnWatched</include>
					</control>
					<control type="image">
						<include>overlay_Resumable</include>
					</control>
				</control>
			</control>
		</itemlayout>
		<focusedlayout width="425" height="300">
			<control type="group">
				<include>focus_SlideWide</include>
				<control type="image">
					<width>450</width>
					<height>272</height>
					<texture background="true">$VAR[thumb_Landscape.Condition]</texture>
					<bordertexture border="27">frames/frame_Square.png</bordertexture>
					<aspectratio align="center">scale</aspectratio>
					<bordersize>22</bordersize>
				</control>
				<control type="image">
					<posx>32</posx>
					<posy>176</posy>
					<width>156</width>
					<height>64</height>
					<texture background="true">$INFO[ListItem.Path]logo.png</texture>
					<aspectratio align="center">keep</aspectratio>
					<visible>Skin.HasSetting(tvshowlogos.enable) + [stringcompare(Container.FolderPath,videodb://5/) | SubString(Container.FolderPath,special://)]</visible>
				</control>
				<control type="group">
					<posx>396</posx>
					<posy>218</posy>
					<control type="image">
						<include>overlay_UnWatched</include>
					</control>
					<control type="image">
						<include>overlay_Resumable</include>
					</control>
				</control>
			</control>
		</focusedlayout>
	</include>
	<include name="SlideWideMusic">
		<itemlayout width="425" height="300">
			<control type="image">
				<width>450</width>
				<height>272</height>
				<texture fallback="thumbs/artist_landscape.png" background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<bordertexture border="31">frames/frame_Square.png</bordertexture>
				<bordersize>22</bordersize>
				<aspectratio align="center">stretch</aspectratio>
				<visible>Container.Content(artists)</visible>
			</control>
		</itemlayout>
		<focusedlayout width="425" height="300">
			<control type="image">
				<width>450</width>
				<height>272</height>
				<texture fallback="thumbs/artist_landscape.png" background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<bordertexture border="27">frames/frame_Square.png</bordertexture>
				<bordersize>22</bordersize>
				<aspectratio align="center">stretch</aspectratio>
				<visible>Container.Content(artists)</visible>
				<include>focus_SlideWide</include>
			</control>
		</focusedlayout>
	</include>

<!---SQUARE------>
	<include name="view_SlideSquare">
		<control type="wraplist" id="522">
			<viewtype label="Slide">info</viewtype>
			<posx>-55</posx>
			<posy>115</posy>
			<width>1400</width>
			<height>600</height>
			<onleft>52</onleft>
			<onright>52</onright>
			<onup>6000</onup>
			<ondown>72</ondown>
			<pagecontrol>72</pagecontrol>
			<focusposition>1</focusposition>
			<scrolltime tween="Cubic" easing="Out">400</scrolltime>
			<orientation>horizontal</orientation>
			<visible>[Container.Content(albums) | Container.Content(singles) | Container.Content(songs) | Container.Content(artists) | Container.Content(addons)] | [SubString(Container.FolderPath,plugin://) + !Container.HasFiles + ![Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)]]</visible>
			<include>transition_Container</include>
			<include>infoDialogHide</include>
			<include>toggle_Menu</include>
			<itemlayout height="226" width="280">
				<control type="image">
					<width>300</width>
					<height>300</height>
					<texture background="true">$VAR[thumb_Square.Condition]</texture>
					<bordertexture border="40">frames/frame_Square.png</bordertexture>
					<bordersize>22</bordersize>
					<aspectratio>scale</aspectratio>
				</control>
			</itemlayout>
			<focusedlayout height="250" width="280">	
				<control type="image">
					<width>300</width>
					<height>300</height>
					<texture background="true">$VAR[thumb_Square.Condition]</texture>
					<bordertexture border="40">frames/frame_Square.png</bordertexture>
					<bordersize>22</bordersize>
					<aspectratio>scale</aspectratio>
					<include>focus_SlideMusic</include>
				</control>
			</focusedlayout>
		</control>
	</include>
</includes>